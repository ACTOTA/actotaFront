generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type ListingLocation {
  flag   String
  label  String
  latlng Float[]
  region String
  value  String
}

model Account {
  id                String @id @default(auto()) @map("_id") @db.ObjectId
  access_token      String
  expires_at        Int
  id_token          String
  provider          String
  providerAccountId String
  scope             String
  token_type        String
  type              String
  userId            String @db.ObjectId

  @@unique([provider, providerAccountId])
}

model Listing {
  id            String          @id @default(auto()) @map("_id") @db.ObjectId
  activity      String
  bathroomCount Int
  createdAt     DateTime        @db.Date
  description   String
  guestCount    Int
  imageSrc      String
  location      ListingLocation
  price         Int
  roomCount     Int
  title         String
  userId        String          @db.ObjectId
}

model Reservation {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt  DateTime @db.Date
  endDate    DateTime @db.Date
  listingId  String   @db.ObjectId
  startDate  DateTime @db.Date
  totalPrice Int
  userId     String   @db.ObjectId
}

model User {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt      DateTime @db.Date
  email          String   @unique
  /// Could not determine type: the field only had null or empty values in the sample set.
  emailVerified  Json?
  favoriteIds    String[]
  hashedPassword String?
  image          String?
  name           String
  updatedAt      DateTime @db.Date
}
